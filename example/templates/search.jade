
extends layout

block prepend title
  #{ page.title } -

block header
  a.back(href='/') << back to index
  h1= page.title

block content
  form#instant_search(method='get')
    fieldset
      input#q(type='text', name='q', tabindex='1', value='search...', onblur='if(this.value == \'\') {this.value = \'search...\'}', onfocus='if(this.value == \'search...\') {this.value = \'\'}', onmouseout='window.status=\'\'; return true;', onmouseover='window.status=\'search...\'; return true;')
      input#searchsubmit(type='submit', value='search')
  #results
